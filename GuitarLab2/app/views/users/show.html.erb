<%= form_for @user, html: { multipart: true } do |f| %>

<div class="container">
    <div class="background">
        <div class="fb-profile">

            <%= image_tag @user.coverpic.url, :align=> "left", :class=> "fb-image-lg", :alt=>"Upload Cover Photo in Account Settings" %>
            <%= image_tag @user.profpic.url,  :align=> "left", :class=> "fb-image-profile thumbnail", :alt=>"Upload Profile Photo in Account Settings" %>

            <div class="fb-profile-text">
                <h1><%= @user.name.upcase_first %></h1>
                <%= @user.email %>
                <p></p>
                <% provide(:title, @user.name) %>

                <br>

                <div class="textContainer">

                    <h3>Status:
                        <%if current_user.speciall?%>
                        Teacher
                        <%elsif current_user.special?%>
                        Special
                        <%elsif current_user.student?%>
                        Student
                        <%else%>
                        Regular
                        <%end%>
                    </h3>

                    <h3><%= f.label :Favorite_Music %></h3>
                    <h3>
                        <%= @user.faveMusic%></h3>

                    <h3><%= f.label :Bio %></h3>
                    <h3>
                        <%= @user.bio%></h3>

                    <%if current_user.speciall?%>

                    <% code = SecureRandom.hex(3) %>
                    <h3>Code For Student: Guitar
                      

                    </h3>

                    <%end%>

                    <%if current_user.student?%>

                    <h3>Enter Code to upgrade to Special Memeber</h3>

                    <div class="form-group">

                        <div class="btn-group btn-group-justified col-md-12 ">
                            <a href="http://localhost:3000/masters/student" class="btn btn-primary">Student Member</a>
                        </div>



                    </div>

                    <%end%>

                </div>
            </div>
        </div>

        <h1><%= link_to "Edit Account", edit_user_path(current_user) %></h1>

    </div>
</div>

<!----------------------------------------------------------------------------->
<!----------------------------------------------------------------------------->
<style >
    .background {

        background-color: rgba(225, 225, 225, 0.8);

    }

    .fb-profile img.fb-image-lg {
        z-index: 0;
        width: 100%;
        height: 100%;
        margin-bottom: 10px;
    }

    .fb-image-profile {
        margin: -90px 10px 0 50px;
        z-index: 9;
        width: 20%;
    }
    @media(max-width: 828px;) {

        .fb-profile-text > h1 {
            font-weight: 700;
            font-size: 16px;
            font color: lightgrey;
        }

        .fb-image-profile {
            margin: -45px 10px 0 25px;
            z-index: 9;
            width: 20%;
        }
    }

    .textContainer {
        margin: 50px;
    }

</style>

<%end%>
